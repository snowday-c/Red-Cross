.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
  padding: 20px;
}

.score-container {
  margin-bottom: 40px;
}

.score-text {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.certificate-section, .no-certificate-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.certificate-btn, .back-btn {
  width: 200px;
  height: 50px;
  border: none;
  border-radius: 25px;
  font-size: 18px;
  margin-top: 20px;
  transition: background-color 0.3s ease;
}

.certificate-btn {
  background-color: #07c160;
  color: #fff;
}

.certificate-btn:active {
  background-color: #05a050;
}

.no-certificate-text {
  font-size: 16px;
  color: #666;
  margin-bottom: 20px;
}

.back-btn {
  background-color: #3996ad;
  color: #333;
}

.back-btn:active {
  background-color: #4665ee;
}