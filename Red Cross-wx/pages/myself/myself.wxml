<view class="container">
  <view class="header">
    <!-- 用户头像 -->
    <view class="avatar-container" bindtap="showEditOptions">
      <image class="avatar" src="{{userInfo.pictureUrl ? '/assets/avatar/' + userInfo.pictureUrl + '.jpg' : '/assets/avatar/101.jpg'}}" />
    </view>

    <!-- 用户名 -->
    <text class="username">{{userInfo.userName || '默认用户名'}}</text>
  </view>
  <view class="content">
    <view class="item">
      <text class="label">个人历史成绩</text>
    </view>
    <view class="item">
      <text class="label">个人证书</text>
    </view>
    <view class="item">
      <text class="label">历史场地预约</text>
    </view>
    <view class="item">
      <text class="label">消息通知</text>
    </view>
  </view>
</view>

<!-- 修改头像和用户名的弹窗 -->
<view class="edit-modal" wx:if="{{showEditModal}}">
  <view class="modal-content">
    <view class="option" bindtap="changeAvatar">修改头像</view>
    <view class="option" bindtap="changeUsername">修改用户名</view>
    <view class="option cancel" bindtap="hideEditOptions">取消</view>
  </view>
</view>