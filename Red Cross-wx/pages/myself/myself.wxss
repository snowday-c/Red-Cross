.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar-container {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 10px;
}

.avatar {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

.content {
  width: 100%;
}

.item {
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.label {
  font-size: 16px;
  color: #333;
}

.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
}

.option {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
}

.option:last-child {
  border-bottom: none;
}

.cancel {
  color: #f00;
}