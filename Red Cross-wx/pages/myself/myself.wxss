.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  display: flex;
  align-items: center; /* 垂直居中 */
  width: 100%;
  margin-bottom: 20px;
}

.avatar-container {
  width: 80px; /* 调整头像容器大小 */
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10px; /* 头像和用户名之间的间距 */
}

.avatar {
  width: 100%;
  height: 100%;
}

.username {
  margin-left: 30px;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.logout-button {
  background-color: transparent;
  border: none;
  color: #f00;
  font-size: 14px;
  padding: 5px 10px;
  margin-left: auto; /* 将按钮推到最右边 */
}

.content {
  width: 100%;
}

.item {
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.label {
  font-size: 16px;
  color: #333;
}

.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
}

.option {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
}

.option:last-child {
  border-bottom: none;
}

.cancel {
  color: #f00;
}

.avatar-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 90%; /* 弹窗宽度 */
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
  max-height: 80vh; /* 弹窗最大高度 */
}

.avatar-scroll {
  height: 60vh; /* 设置 scroll-view 的高度 */
}

.avatar-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 15px;
}

.avatar-item {
  width: 45%; /* 每个头像项的宽度 */
  margin-bottom: 10px;
}

.avatar-image {
  width: 100%;
  height: 100px; /* 头像图片高度 */
  border-radius: 50%;
}

.option.cancel {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #f00;
  border-top: 1px solid #eee;
}