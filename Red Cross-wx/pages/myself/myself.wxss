.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  display: flex;
  align-items: center;
  width: 110%;
  margin-bottom: 20px;
}

.avatar-container {
  margin-left: 20rpx;
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  padding: 2px;
  background: #000;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
}

.username {
  margin-left: 3%;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 150px;
}

.logout-button {
  max-width: 180rpx;
  min-height: 50rpx;
  background-color: rgb(240, 97, 97);
  border: none;
  color: rgb(0, 0, 0);
  font-size: 16px;
  padding: 0px 0px;
}

.content {
  margin-top: 5%;
  width: 100%;
}

.item {
  padding: 15px;
  border-top: 1px solid rgb(177, 89, 89);
}

.label {
  font-size: 16px;
  color: #333;
}

.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
}

.option {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
}

.option:last-child {
  border-bottom: none;
}

.cancel {
  color: #f00;
}

.avatar-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 90%;
  background: #fff;
  border-radius: 10px;
  overflow: hidden;
  max-height: 80vh;
}

.avatar-scroll {
  height: 60vh;
}

.avatar-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 15px;
}

.avatar-item {
  width: 37%;
  margin-bottom: 10px;
  padding: 2px;
  background: #000;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100px;
  border-radius: 50%;
  display: block;
}

.option.cancel {
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #f00;
  border-top: 1px solid #eee;
}

.settings-container {
  position: absolute;
  right: 5rpx;       
  top: 2rpx;
  z-index: 10;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.settings-menu {
  position: absolute;
  right: 0;
  top: 60rpx;
  width: 300rpx;
  background: rgb(158, 147, 147);
  border-radius: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.menu-item {
  padding: 12px 15px;
  font-size: 14px;
  color: #333;
  border-bottom: 1px solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.delete-account-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.delete-account-modal .modal-content {
  width: 80%;
  background: #fff;
  border-radius: 10px;
  padding: 20px;
  box-sizing: border-box;
}

.delete-account-modal .modal-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  text-align: center;
}

.delete-account-modal .modal-text {
  font-size: 15px;
  color: #666;
  margin-bottom: 20px;
  line-height: 1.5;
}

.delete-account-modal .modal-buttons {
  display: flex;
  justify-content: space-between;
}

.delete-account-modal .modal-button {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  border-radius: 5px;
}

.delete-account-modal .cancel {
  background-color: #f5f5f5;
  color: #333;
  margin-right: 10px;
}

.delete-account-modal .confirm {
  background-color: #ff4d4f;
  color: #fff;
}

.upload-button {
  width: 100%;
  padding: 15px;
  text-align: center;
  font-size: 16px;
  color: #07c160;
  border-bottom: 1px solid #eee;
  background-color: #f8f8f8;
}

.upload-button:active {
  background-color: #e8e8e8;
}