.container {
  padding: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.input-field {
  width: 80%;
  padding: 12px;
  margin: 10px 0;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.btn {
  width: 80%;
  padding: 12px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
}

.text {
  margin-top: 20px;
  color: #007aff;
}
