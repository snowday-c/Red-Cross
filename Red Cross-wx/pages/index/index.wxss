/* index.wxss */
page {
  background-color: #f7f9fb;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.page-container {
  padding-bottom: 40rpx;
}

/* 轮播图区域样式 */
.swiper {
  height: 360rpx;
  border-radius: 0 0 24rpx 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(255, 100, 100, 0.1);
}

.swiper swiper-item image {
  width: 100%;
  height: 100%;
}

/* 登录区域样式 */
.login-container {
  margin: 40rpx 20rpx 30rpx;
}

.login-btn {
  background: linear-gradient(135deg, #ff5e57, #ff2a57);
  color: white;
  border-radius: 50rpx;
  font-size: 34rpx;
  height: 100rpx;
  line-height: 100rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 46, 87, 0.3);
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 46, 87, 0.3);
}

/* 已登录用户欢迎区域样式 */
.welcome-container {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.profile-link {
  font-size: 26rpx;
  color: #ff6666;
}

/* 通知区域样式 */
.notice-container {
  margin: 0 20rpx 30rpx;
  padding: 24rpx;
  background: linear-gradient(to right, #ffffff, #fff5f5);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 100, 100, 0.08);
  border-left: 6rpx solid #ff6666;
}

.notice-title-wrapper {
  display: flex;
  align-items: center;
}

.notice-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.notice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-notice {
  font-size: 26rpx;
  color: #999;
}

.notice-content {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.notice-title-text {
  font-size: 30rpx;
  margin-bottom: 8rpx;
  color: #333;
  font-weight: 500;
}

.notice-time {
  font-size: 24rpx;
  color: #999;
}

/* 宣传标语区域 */
.slogan-container {
  margin: 0 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 100, 100, 0.1);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.slogan-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 100, 100, 0.1);
}

.slogan-item:last-child {
  border-bottom: none;
}

.slogan-icon {
  width: 44rpx;
  height: 44rpx;
  min-width: 44rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 60, 60, 0.2));
}

.slogan-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}