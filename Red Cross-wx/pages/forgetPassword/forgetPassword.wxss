/* pages/forgetPassword/forgetPassword.wxss */

.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f5f5f5;
}

.input-group {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
}

.label {
  width: 80px;
  text-align: right;
  margin-right: 10px;
}

.input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.send-code-btn {
  width: 100%;
  padding: 10px;
  background-color: #0c923f;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
  margin-top: 15px;
}

.send-code-btn[disabled] {
  background-color: #ccc;
}

.submit-btn {
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: center;
  margin-top: 20px;
}