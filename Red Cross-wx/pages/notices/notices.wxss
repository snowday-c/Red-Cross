.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.notice-list {
  display: flex;
  width: 90%;
  flex-direction: column;
  gap: 20rpx;
}

.notice-item {
  background-color: #fff;
  padding: 25rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: all 0.3s ease;
}

.notice-item:active {
  background-color: #f9f9f9;
}

.notice-item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.notice-item-content {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eee;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.notice-item {
  background-color: #fff;
  padding: 25rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: all 0.3s ease;
}

.notice-item:active {
  background-color: #f9f9f9;
}

.notice-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notice-item-sender {
  font-size: 24rpx;
  color: #999;
}

.notice-item-time {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}