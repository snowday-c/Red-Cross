.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px;
}

.header {
  margin-bottom: 40px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
}

.form {
  width: 100%;
}

.input {
  width: 100%;
  height: 50px;
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 16px;
}

.code-container {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.code-input {
  flex: 1;
  height: 50px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 16px;
  margin-right: 10px;
}

.code-btn {
  width: 120px;
  height: 50px;
  background-color: #07c160;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
}

.register-btn {
  width: 100%;
  height: 50px;
  background-color: #077dc1;
  color: #fff;
  font-size: 18px;
  border-radius: 8px;
  margin-top: 20px;
}

.footer {
  margin-top: 20px;
}

.login-text {
  color: #07c160;
  font-size: 16px;
  text-decoration: underline;
}