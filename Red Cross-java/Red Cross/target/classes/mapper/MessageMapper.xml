<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.redcross.mapper.MessageMapper">
    <!-- 显示公共消息 -->
    <select id="getPublicMessages" resultType="com.example.redcross.entity.Message">
        SELECT *
        FROM message
        WHERE message_type = '0'
    </select>

    <!-- 添加公共消息 -->
    <insert id="createPublicMessage" parameterType="com.example.redcross.entity.Message">
        INSERT INTO message (message_type, title, content, sender,time)
        VALUES (0, #{title}, #{content}, #{sender},NOW())
    </insert>
    <!-- 删除公共消息 -->
    <delete id="deletePublicMessage" parameterType="String">
        DELETE FROM message
        WHERE title = #{title}
    </delete>
    <!-- 添加私人消息 -->
    <insert id="createPrivateMessage" parameterType="com.example.redcross.entity.Message">
        INSERT INTO message (message_type, title, content, sender,receiver,time)
        VALUES (1, #{title}, #{content}, #{sender},#{receiver},NOW())
    </insert>
    <!-- 删除私人消息 -->
    <delete id="deletePrivateMessage" parameterType="String">
        DELETE FROM message
        WHERE title = #{title}
    </delete>
</mapper>